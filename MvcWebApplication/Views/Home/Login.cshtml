@model MvcWebApplication.ViewModels.Home.HomeLoginViewModel

@{
	ViewData["Title"] = "Login";
}

<h4>Login</h4>

@{
	if (Model.Message.Length > 0)
	{
		<div class="text-danger">@Model.Message</div>
	}
}

<form id="Login" asp-controller="Home" asp-action="Authenticate" method='POST' autocomplete="off">
	<div>
		<dl class="row">
			<dt class="col-sm-2">
				<label asp-for=UserLogin.UserName></label>
			</dt>
			<dd class="col-sm-10">
				<input val asp-for=UserLogin.UserName />
			</dd>
			<dt class="col-sm-2">
				<label asp-for=UserLogin.UserPassword></label>
			</dt>
			<dd class="col-sm-10">
				<input type="password" asp-for=UserLogin.UserPassword />
			</dd>
		</dl>
	</div>
	<div style="padding-top: 3px;">
		<button type="submit">Login</button>
	</div>
</form>